# Ignore system files
.DS_Store
Thumbs.db

# Ignore log files and temporary files
*.log
*.tmp
*.bak

# Ignore Python files (if applicable)
*.pyc
*.pyo
__pycache__/

# Ignore Node.js dependencies (if using Node.js)
node_modules/
npm-debug.log
yarn-debug.log
yarn-error.log

# Ignore environment files
.env
.env.local

# Ignore IDE and editor-specific files
.idea/
.vscode/
*.sublime-workspace
*.sublime-project

# Ignore build and output directories
dist/
build/
out/

# Ignore media files exceeding 50MB (optional for large files)
*.mp4
*.avi
*.mov
*.mkv

# Ignore compressed files
*.zip
*.tar.gz
*.rar
*.7z

# Ignore Git Large File Storage (if using Git LFS)
*.lfs
